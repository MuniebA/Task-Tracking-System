<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/item_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/task64" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_name"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/task_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <ImageView
        android:id="@+id/task_alert_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/critical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/task_complete_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark" />

    <Switch
        android:id="@+id/task_complete_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/task_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_45_days"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingStart="8dp" />
</LinearLayout>